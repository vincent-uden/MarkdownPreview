#kivy 1.0

BoxLayout:
    canvas:
        Color:
            rgb: 0.2, 0.2, 0.2
        Rectangle:
            size: self.size
    id: lul
    orientation: "vertical"
    padding: 2, 2, 2, 2
    BoxLayout:
        orientation: "horizontal"
        size_hint: 1, 0.03
        id: button_container
        Button:
            text: "Select File"
            on_release: app.toggle_file_chooser(file_chooser, image)
        Button:
            text: "Reload"
            on_release: app.refresh(image)
        Button:
            text: "Export to pdf"
            on_release: app.open_export_popup()
        Button:
            text: "Prev Page"
            on_release: app.prev_img(image)
        Button:
            text: "Next Page"
            on_release: app.next_img(image)

    Image:
        source: app.current_img
        id: image
        size_hint: 1, 0.97
        canvas.before:
            Color:
                rgb: 0.2, 0.2, 0.2
            Rectangle:
                pos: image.pos
                size: image.size

    FileChooserIconView:
        id: file_chooser
        size_hint: 0, 0
        size: 0, 0
        on_submit: app.select_file(file_chooser, image)
