#kivy 1.0

BoxLayout:
    orientation: "vertical"
    BoxLayout:
        orientation: "horizontal"
        size_hint: 1, 0.03
        Button:
            text: "Select File"
            on_release: app.toggle_file_chooser(file_chooser, image)
        Button:
            text: "Reload"
            on_release: app.refresh(image)
        Button:
            text: "Prev Page"
            on_release: app.prev_img(image)
        Button:
            text: "Next Page"
            on_release: app.next_img(image)

    Image:
        source: app.current_img
        id: image
        size_hint: 1, 0.97

    FileChooserIconView:
        id: file_chooser
        size_hint: 0, 0
        size: 0, 0
        on_submit: app.select_file(file_chooser, image)
